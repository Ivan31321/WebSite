@{
}
@model Manufacturer
@{
    ViewData["Title"] = "Add new Manufacturer";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add new Manufacturer</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form id="manufacturers" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <img id="ManufacturerPicture" class="border-info rounded-circle"style="max-width:150px;" />
                </div>
                <div class="form-group">
                    <label asp-for="PictureURL" class="control-label"></label>
                    <input asp-for="PictureURL" class="form-control" />
                    <span asp-validation-for="PictureURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Adress" class="control-label"></label>
                    <input asp-for="Adress" class="form-control" />
                    <span asp-validation-for="Adress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input id="create" type="submit" value="Create" class="btn btn-outline-success float-right" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                </div>
                </form>
                
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
$(document).ready(fuction(){
    var output = document.getElementById('ManufacturerPicture');
    output.src = $((this).val());
})
$("#ManufacturerPictureURL").on("change", function() {
    var output = document.getElementById("ManufacturerPicture");
    output.src = $((this).val());
})
    </script>
}
